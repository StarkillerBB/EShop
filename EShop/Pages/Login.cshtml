@page
@model EShop.Pages.LoginModel
@{
}

<form method="post" style="width: 300px; margin: 0 auto;">
    <!-- Email input -->
    <div class="form-outline mb-4">
        <input type="text" id="form2Example1" class="form-control" asp-for="Username" />
        <label class="form-label" for="form2Example1">Brugernavn</label>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        <input type="password" id="form2Example2" class="form-control" asp-for="Password" />
        <label class="form-label" for="form2Example2">Adgangskode</label>
    </div>
    <div>
        @if (Model.FailedLogin == true)
        {
            <p class="text-danger">Forkert brugernavn eller adgangskode.</p>
        }
    </div>
    <!-- Submit button -->
    <div class="text-center">
        <button type="submit" style="width: 15%;" class="btn btn-primary btn-block mb-4">Sign in</button>
    </div>
</form>